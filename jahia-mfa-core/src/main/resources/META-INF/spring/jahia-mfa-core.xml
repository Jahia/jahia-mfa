<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <bean id="jahiaMFAServiceImpl" class="org.jahia.modules.mfa.impl.JahiaMFAServiceImpl" factory-method="getInstance"/>
    <osgi:service id="JahiaMFAServiceOsgi" ref="jahiaMFAServiceImpl" interface="org.jahia.modules.mfa.service.JahiaMFAService"/>

    <bean id="jahiaMFAAuthenticationValve" class="org.jahia.modules.mfa.valve.AuthenticationValve">
        <property name="position" value="1"/>
        <property name="jahiaUserManagerService" ref="JahiaUserManagerService"/>
        <property name="authPipeline" ref="authPipeline"/>
        <property name="jahiaMFAService" ref="jahiaMFAServiceImpl"/>
    </bean>
    
    <bean id="activateMFAAction" class="org.jahia.modules.mfa.actions.ActivateMFAAction">
        <property name="name" value="activateMFAAction"/>
        <property name="requireAuthenticatedUser" value="true"/> 
    </bean>
    
    <bean id="deactivateMFAAction" class="org.jahia.modules.mfa.actions.DeactivateMFAAction">
        <property name="name" value="deactivateMFAAction"/>
        <property name="requireAuthenticatedUser" value="true"/> 
    </bean>
    
    <bean id="decryptOtpKeyAction" class="org.jahia.modules.mfa.actions.DecryptOtpKeyAction">
        <property name="name" value="decryptOtpKeyAction"/>
        <property name="requireAuthenticatedUser" value="true"/> 
    </bean>
    
    <bean id="prepareMFAAction" class="org.jahia.modules.mfa.actions.PrepareMFAAction">
        <property name="name" value="prepareMFAAction"/>
        <property name="requireAuthenticatedUser" value="true"/> 
    </bean>
    
    <bean id="verifyTokenAction" class="org.jahia.modules.mfa.actions.VerifyTokenAction">
        <property name="name" value="verifyTokenAction"/>
        <property name="requireAuthenticatedUser" value="true"/> 
    </bean>
</beans>


